<h1>Articles Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete }, onclick: "return confirm('Are you sure you want to delete this article?');" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h4><%= link_to 'Create ne article', new_article_path %></h4>